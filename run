#!/usr/bin/env bash

set -euo pipefail

script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

if [ -z "${DEV_ENV:-}" ]; then
    export DEV_ENV="$script_dir"
fi

log_file="/tmp/dev_env.log"
run_log_file="/tmp/dev_env_run.log"

log_and_capture() {
    tee -a "$run_log_file" | tee -a "$log_file"
}

profile_override=""
grep=""
dry_run="0"

while [[ $# -gt 0 ]]; do
    case "$1" in
        --dry)
            dry_run="1"
            shift
            ;;
        --profile)
            profile_override="$2"
            shift 2
            ;;
        *)
            grep="$1"
            shift
            ;;
    esac
done

log() {
    local msg
    if [[ $dry_run == "1" ]]; then
        msg="[DRY_RUN]: $1"
    else
        msg="$1"
    fi
    echo "$msg" | log_and_capture
}

{
    echo "================================================================================"
    echo "Run started: $(date '+%Y-%m-%d %H:%M:%S')"
    echo "================================================================================"
} | log_and_capture

profile=""
if [ -n "$profile_override" ]; then
    profile="$profile_override"
    log "Using profile override: $profile"
elif [ -f "$script_dir/.profile" ]; then
    profile=$(cat "$script_dir/.profile")
    log "Using configured profile: $profile"
else
    log "No profile configured for this machine."
    log ""
    log "First, create a profile for your machine:"
    log "  1. Look at existing profiles in profiles/ directory for examples"
    log "  2. Create a new profile: profiles/my-machine"
    log "  3. List the scripts you want to run (one per line)"
    log "  4. Set your profile: ./setup my-machine"
    log ""
    log "Example profile (profiles/my-laptop):"
    log "  # My Laptop Profile"
    log "  aur"
    log "  core"
    log "  fonts"
    log "  dev"
    log "  nvim"
    log ""
    log "Then run: ./setup my-laptop"
    exit 1
fi

if [ ! -f "$script_dir/profiles/$profile" ]; then
    log "ERROR: Profile '$profile' not found at $script_dir/profiles/$profile"
    exit 1
fi

log "Environment: $DEV_ENV"
log "Filter: ${grep:-none}"
log ""

if ping -c 1 -W 2 archlinux.org >/dev/null 2>&1; then
    export HAS_INTERNET="true"
    log "Internet connectivity: available"
else
    export HAS_INTERNET="false"
    log "Internet connectivity: offline (package installations will be skipped)"
fi

log "Caching installed packages list..."
export INSTALLED_PACKAGES=$(pacman -Qq 2>/dev/null || echo "")
if [ -n "$INSTALLED_PACKAGES" ]; then
    package_count=$(echo "$INSTALLED_PACKAGES" | wc -l)
    log "Cached $package_count installed packages"
else
    log "WARNING: Could not retrieve package list (will fall back to individual checks)"
fi
log ""

scripts_to_run=()
while IFS= read -r line; do
    [[ "$line" =~ ^[[:space:]]*# ]] && continue
    [[ -z "$line" ]] && continue

    line=$(echo "$line" | xargs)
    [[ -z "$line" ]] && continue

    if [[ "$line" =~ ^([a-zA-Z0-9_.-]+)=(.+)$ ]]; then
        config_key="${BASH_REMATCH[1]}"
        config_value="${BASH_REMATCH[2]}"
        env_var_name="PROFILE_$(echo "$config_key" | tr '.' '_' | tr '[:lower:]' '[:upper:]')"
        export "$env_var_name=$config_value"
        continue
    fi

    scripts_to_run+=("$line")
done < "$script_dir/profiles/$profile"

if [ ${#scripts_to_run[@]} -eq 0 ]; then
    log "No scripts defined in profile: $profile"
    exit 1
fi

log "Scripts from profile '$profile': ${#scripts_to_run[@]} total"
log ""

executed=0
skipped=0
for script_name in "${scripts_to_run[@]}"; do
    script_path="$script_dir/runs/$script_name"

    if [ ! -f "$script_path" ]; then
        log "WARNING: Script not found: $script_name (skipping)"
        skipped=$((skipped + 1))
        continue
    fi

    if [ ! -x "$script_path" ]; then
        log "WARNING: Script not executable: $script_name (skipping)"
        skipped=$((skipped + 1))
        continue
    fi

    if [ -n "$grep" ] && ! echo "$script_name" | grep -q "$grep"; then
        log "Filtered out: $script_name"
        skipped=$((skipped + 1))
        continue
    fi

    log "==> Running: $script_name"

    if [[ $dry_run == "0" ]]; then
        if ! "$script_path" 2>&1 | log_and_capture; then
            log "ERROR: Script $script_name failed"
            exit 1
        fi
    fi

    executed=$((executed + 1))
    log ""
done

log "Profile '$profile' complete!"
log "Executed: $executed scripts"
if [ $skipped -gt 0 ]; then
    log "Skipped: $skipped scripts"
fi

{
    echo "================================================================================"
    echo "Run completed: $(date '+%Y-%m-%d %H:%M:%S')"
    echo "Log saved to: $run_log_file"
    echo "================================================================================"
} | log_and_capture
