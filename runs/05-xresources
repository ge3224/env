#!/usr/bin/env bash

set -euo pipefail

log() {
    echo "[XRESOURCES] $1"
}

DOTFILES_DIR="${DEV_ENV:-$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)}"

log "Setting up Xresources..."

# Ensure .config/X11 directory exists
mkdir -p "$HOME/.config/X11"

# Create symlink to Xresources
log "Creating symlink to Xresources..."
ln -sf "$DOTFILES_DIR/dotfiles/X11/Xresources" "$HOME/.config/X11/Xresources"

log "Xresources configuration complete!"
